#!/usr/bin/env php
<?php

include __DIR__ . '/../vendor/autoload.php';

$rows = exec("tput lines");
$cols = exec("tput cols");

$board = new Life\Board($cols - 1, $rows);

$seeds = [
    // Left node
    [6, 8], [6, 9],
    [7, 8], [7, 9],

    // Left glider
    [16, 8], [16, 9], [16, 10],
    [17, 7], [17, 11],
    [18, 6], [18, 12],
    [19, 6], [19, 12],
    [20, 9],
    [21, 7], [21, 11],
    [22, 8], [22, 9], [22, 10],
    [23, 9],

    // Right glider
    [26, 6], [26, 7], [26, 8],
    [27, 6], [27, 7], [27, 8],
    [28, 5], [28, 9],
    [30, 4], [30, 5], [30, 9], [30, 10],

    // Right node
    [40, 6], [40, 7],
    [41, 6], [41, 7]
];

$board->seed($seeds);

while(true) {
    $board->draw();
    usleep(5);
    $board->step();
}
